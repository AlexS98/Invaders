<Window x:Class="Invaders.HireWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="HireWindow" Height="120" Width="300" ResizeMode="NoResize" ShowInTaskbar="False">
    <Grid ShowGridLines="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.5*"/>
            <ColumnDefinition Width="1.5*" />
            <ColumnDefinition Width="1.5*" />
        </Grid.ColumnDefinitions>
        <Button Name="HireKnight" Click="HireKnight_Click">
            <Button.Background>
                <ImageBrush ImageSource="images\white_horse.png" />
            </Button.Background>
        </Button>
        <Button Name="HireSwordsman" Grid.Column="1" Click="HireSwordsman_Click">
            <Button.Background>
                <ImageBrush ImageSource="images\black_swords.png" />
            </Button.Background>
        </Button>
        <Button Name="HireBowman" Grid.Column="2" Click="HireBowman_Click">
            <Button.Background>
                <ImageBrush ImageSource="images\white_bow.png" />
            </Button.Background>
        </Button>
    </Grid>
</Window>
